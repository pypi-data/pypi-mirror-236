{#def list_data #}
{%- set title = _("Vocabulary types") %}

{%- extends config.BASE_TEMPLATE %}

{%- block page_body %}
<div class="ui container centered">
  <h1 class="mt-20 floated left">{{ _("Vocabularies") }}</h1>
  <div class="ui centered grid">
    <table  class="ui padded centered table m-20" >
      <thead>
        <tr>
          <th>
            Id
          </th>
          <th>
            PID type
          </th>
          <th>
            Count
          </th>
          <th>
            Link
          </th>
          <th>
            Name
          </th>
          <th>
            Description
          </th>
        </tr>
      </thead>
      <tbody>
        {% for item in list_data['hits']['hits'] %}
          <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.pid_type }}</td>
            <td>{{ item.count }}</td>
            <td><a href={{ item.links['self'].replace("/api/", "/") }}>{{ item.id }}</a></td>
            <td>{{ item.name }}</td>
            <td>{{ item.description }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  <div>
</div>
{%- endblock page_body %}
